---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Link from "@/components/icons/Link.astro";
import GitHub from "@/components/icons/GitHub.astro";
import Php from "@/components/icons/Php.astro";
import Mustache from "@/components/icons/Mustache.astro";
import Tailwind from "@/components/icons/Tailwind.astro";
import JavaScript from "@/components/icons/JavaScript.astro";
import ProjectGallery from "@/components/ProjectGallery.astro";
import AstroIcon from "@/components/icons/AstroIcon.astro";

const project = {
  title: "ToolsCLA - Colección de herramientas",
  subtitle:
    "Plataforma gratuita con herramientas para agilizar la carga de actividades y optimizar procesos académicos de forma rápida y sencilla.",
  description:
    "CLA Tools es una plataforma web gratuita que reúne un conjunto de herramientas especializadas para agilizar procesos educativos. Desde la conversión de documentos hasta la gestión de archivos PDF, cada herramienta está diseñada pensando en la simplicidad y eficiencia.",
  link: "https://tools.claangel.site/",
  link2: "https://github.com/AngelCLA/CLA-Tools",
  images: [
    "https://images.claangel.site/tools-cla/tools_cla-1.png",
    "https://images.claangel.site/tools-cla/tools_cla-2.png",
    "https://images.claangel.site/tools-cla/tools_cla-3.png",
    "https://images.claangel.site/tools-cla/tools_cla-4.png",
  ],
  tags: [
    {
      name: "Astro",
      class: "bg-[#23262F]/80 text-white",
      icon: AstroIcon,
    },
    {
      name: "Tailwind CSS",
      class: "bg-[#003159]/80 text-white",
      icon: Tailwind,
    },
    {
      name: "JavaScript",
      class: "bg-[#f0db4f]/90 text-black",
      icon: JavaScript,
    },
  ],
};
---

<Layout
  title={`${project.title} - Proyecto de CLAAngel`}
  description={project.description}
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-24">
      <a
        href="javascript:history.back()"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 mb-8 transition-colors"
      >
        ← Volver a proyectos
      </a>

      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1
            class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4"
          >
            {project.title}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
            {project.subtitle}
          </p>

          <ul class="flex flex-wrap gap-2 mb-6">
            {
              project.tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}
                  >
                    <tag.icon className="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))
            }
          </ul>
        </header>

        <ProjectGallery images={project.images} title={project.title} />

        <div class="flex w-full items-center justify-center gap-4 mb-10">
          <LinkButton href={project.link}>
            <Link class="size-4" />
            Ir al sitio
          </LinkButton>
          <LinkButton href={project.link2} variant="secondary">
            <GitHub class="size-4" />
            Código
          </LinkButton>
        </div>
        <div class="prose prose-lg max-w-none">
          <h2
            class="text-2xl mb-2 font-bold text-purple-600 dark:text-purple-500"
          >
            Sobre el proyecto
          </h2>
          <p
            class="text-gray-800 dark:text-gray-300"
            set:html={project.description}
          />

          <h2
            class="text-2xl mb-2 mt-6 font-bold text-purple-600 dark:text-purple-500"
          >
            Características principales
          </h2>

          <div class="grid md:grid-cols-2 gap-4 mt-4">
            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Herramientas gratuitas y de código abierto
              </h4>
              <p class="text-sm">Interfaz intuitiva y fácil de usar.</p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Optimización de tareas repetitivas
              </h4>
              <p class="text-sm">Completamente responsive y accesible.</p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Sin necesidad de registro o instalación
              </h4>
              <p class="text-sm">
                Actualizaciones constantes con nuevas herramientas.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Proyecto de código abierto
              </h4>
              <p class="text-sm">
                Puedes contribuir en el repositorio de GitHub.
              </p>
            </div>
          </div>

          <h2
            class="text-2xl mb-2 mt-6 font-bold text-purple-600 dark:text-purple-500"
          >
            Tecnologías utilizadas
          </h2>

          <p class="text-gray-700 dark:text-gray-300 mb-3">
            El desarrollo se realizó integrando herramientas que permiten
            flexibilidad, personalización y una interfaz intuitiva.
          </p>

          <div class="grid md:grid-cols-2 gap-4">
            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Astro
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Estructura semántica clara y optimizada para accesibilidad.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Tailwind CSS
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Diseño moderno, accesible y consistente.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                JavaScript
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Funcionalidades interactivas y dinámicas para mejorar la UX.
              </p>
            </div>
          </div>
        </div>
      </article>
    </SectionContainer>
  </main>
</Layout>
