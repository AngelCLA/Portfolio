---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Link from "@/components/icons/Link.astro";
import GitHub from "@/components/icons/GitHub.astro";
import Php from "@/components/icons/Php.astro";
import Mustache from "@/components/icons/Mustache.astro";
import Tailwind from "@/components/icons/Tailwind.astro";
import ProjectGallery from "@/components/ProjectGallery.astro";
import Moodle from "@/components/icons/Moodle.astro";

const project = {
  title: "EDI-UPMYS",
  subtitle:
    "Plataforma integral para la evaluación de conocimientos y habilidades académicas",
  description:
    "La Plataforma Integral para la Evaluación del Examen Diagnóstico de Ingreso (EDI) de la Universidad Politécnica del Mar y la Sierra es un entorno diseñado para modernizar la forma en que se gestionan y aplican las evaluaciones académicas institucionales. Construida sobre Moodle y personalizada con PHP, Mustache y Tailwind CSS, esta solución ofrece un sistema robusto, confiable y visualmente actualizado, alineado con las necesidades de profesores, administradores y aspirantes de nuevo ingreso.<br><br> El proyecto no solo adapta la funcionalidad tradicional de Moodle, sino que la transforma para ofrecer una experiencia más limpia, intuitiva y eficiente. Se optimizaron elementos clave como la navegación, la presentación de cuestionarios, el flujo de calificaciones y la experiencia general del usuario, permitiendo que cada evaluación sea más clara, rápida y accesible desde cualquier dispositivo.<br><br>Gracias a su estructura modular y al uso de tecnologías flexibles, la plataforma facilita tareas como el seguimiento del rendimiento, la generación de reportes y la gestión de estudiantes y profesores. En conjunto, se convierte en una herramienta académica sólida y moderna, preparada para sostener evaluaciones a gran escala dentro de la institución.",
  link: "https://edi.upmys.edu.mx/",
  images: [
    "https://images.claangel.site/edi-upmys/edi-1.png",
    "https://images.claangel.site/edi-upmys/edi-2.png",
    "https://images.claangel.site/edi-upmys/edi-3.png",
    "https://images.claangel.site/edi-upmys/edi-4.png",
  ],
  tags: [
    { name: "Moodle", class: "bg-gray-800/80 text-white", icon: Moodle },
    { name: "PHP", class: "bg-[#4f5b93]/80 text-white", icon: Php },
    { name: "Mustache", class: "bg-gray-100/80 text-[#000]", icon: Mustache },
    {
      name: "Tailwind CSS",
      class: "bg-[#003159]/80 text-white",
      icon: Tailwind,
    },
  ],
};
---

<Layout
  title={`${project.title} - Proyecto de CLAAngel`}
  description={project.description}
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-24">
      <a
        href="/projects"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 mb-8 transition-colors"
      >
        ← Volver a proyectos
      </a>

      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1
            class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4"
          >
            {project.title}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
            {project.subtitle}
          </p>

          <ul class="flex flex-wrap gap-2 mb-6">
            {
              project.tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))
            }
          </ul>
        </header>

        <ProjectGallery images={project.images} title={project.title} />

        <div class="flex w-full items-center justify-center gap-4 mb-10">
          <LinkButton href={project.link}>
            <Link class="size-4" />
            Ir al sitio
          </LinkButton>
        </div>
        <div class="prose prose-lg max-w-none">
          <h2
            class="text-2xl mb-2 font-bold text-purple-600 dark:text-purple-500"
          >
            Sobre el proyecto
          </h2>
          <p
            class="text-gray-800 dark:text-gray-300"
            set:html={project.description}
          />

          <h2
            class="text-2xl mb-2 mt-6 font-bold text-purple-600 dark:text-purple-500"
          >
            Características principales
          </h2>

          <div class="grid md:grid-cols-2 gap-4 mt-4">
            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Sistema de evaluación integral
              </h4>
              <p class="text-sm">
                Plataforma completa basada en Moodle para gestionar exámenes y
                evaluaciones institucionales.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Interfaz moderna y responsive
              </h4>
              <p class="text-sm">
                Diseño actualizado con Tailwind CSS, accesible desde cualquier
                dispositivo.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Gestión académica eficiente
              </h4>
              <p class="text-sm">
                Control completo de estudiantes, profesores y grupos académicos.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Reportes automatizados
              </h4>
              <p class="text-sm">
                Generación de estadísticas y reportes de rendimiento en tiempo
                real.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Calificaciones automáticas
              </h4>
              <p class="text-sm">
                Sistema inteligente para evaluar y asignar calificaciones de
                forma rápida.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Personalización institucional
              </h4>
              <p class="text-sm">
                Adaptado específicamente a las necesidades de la Universidad
                Politécnica.
              </p>
            </div>
          </div>

          <h2
            class="text-2xl mb-2 mt-6 font-bold text-purple-600 dark:text-purple-500"
          >
            Tecnologías utilizadas
          </h2>

          <p class="text-gray-700 dark:text-gray-300 mb-3">
            El desarrollo integra tecnologías modernas que garantizan
            flexibilidad, personalización y una experiencia de usuario
            intuitiva. Cada herramienta fue seleccionada para construir una
            plataforma educativa robusta y escalable.
          </p>

          <div class="grid md:grid-cols-2 gap-4">
            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Moodle LMS
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Fundamento del sistema educativo, adaptado a las necesidades
                institucionales.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                PHP personalizado
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Lógica backend adaptada específicamente a los procesos de
                evaluación.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Tailwind CSS
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Diseño moderno, accesible y completamente responsive.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                Mustache Templates
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Sistema de plantillas para generación dinámica de contenido.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                MariaDB
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Base de datos robusta para gestión de usuarios y resultados
                académicos.
              </p>
            </div>

            <div
              class="p-4 bg-gray-100 dark:bg-gray-800/20 rounded-xl shadow-sm"
            >
              <h4
                class="font-semibold text-purple-500 dark:text-purple-400 mb-1"
              >
                JavaScript
              </h4>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Interactividad y validaciones en tiempo real para mejor
                experiencia.
              </p>
            </div>
          </div>
        </div>
      </article>
    </SectionContainer>
  </main>
</Layout>
