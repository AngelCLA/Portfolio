---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Link from "@/components/icons/Link.astro";
import GitHub from "@/components/icons/GitHub.astro";
import Php from "@/components/icons/Php.astro";
import Supabase from "@/components/icons/Supabase.astro";
import Tailwind from "@/components/icons/Tailwind.astro";
import ProjectGallery from "@/components/ProjectGallery.astro";
import JavaScript from "@/components/icons/Code.astro";

const project = {
  title: "TF-Clinica - Sistema de gestión para clínica de fisioterapia",
  subtitle:
    "Plataforma integral para la gestión de la clínica de fisioterapia de la Universidad Politécnica del Mar y la Sierra.",
  description:
    "Plataforma integral para la gestión de la clínica de fisioterapia de la Universidad Politécnica del Mar y la Sierra. Desarrollada con PHP puro, Tailwind CSS y Supabase ofrece una experiencia de usuario fluida y eficiente para estudiantes y profesores.",
  link: "blank",
  images: [
    "/projects/tf-clinica/TF-Clinica-1.png",
    "/projects/tf-clinica/TF-Clinica-2.png",
    "/projects/tf-clinica/TF-Clinica-3.png",
    "/projects/tf-clinica/TF-Clinica-4.png",
  ],
  tags: [
    { name: "PHP", class: "bg-[#4f5b93]/80 text-white", icon: Php },
    {
      name: "Tailwind CSS",
      class: "bg-[#003159]/80 text-white",
      icon: Tailwind,
    },
    { name: "Supabase", class: "bg-[#121212]/80 text-white", icon: Supabase },
    { name: "Supabase", class: "bg-[#121212]/80 text-white", icon: JavaScript },
  ],
};
---

<Layout
  title={`${project.title} - Proyecto de CLAAngel`}
  description={project.description}
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-24">
      <a
        href="/projects"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 mb-8 transition-colors"
      >
        ← Volver a proyectos
      </a>

      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1
            class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4"
          >
            {project.title}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
            {project.subtitle}
          </p>

          <ul class="flex flex-wrap gap-2 mb-6">
            {
              project.tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))
            }
          </ul>
        </header>

        <ProjectGallery images={project.images} title={project.title} />

        <div class="flex w-full items-center justify-center gap-4 mb-10">
          <LinkButton> Nota: Proyecto cerrado al público </LinkButton>
        </div>
        <div class="prose prose-lg max-w-none">
          <h2 class="text-2xl mb-2 font-bold text-purple-400">
            Sobre el proyecto
          </h2>
          <p class="text-gray-800 dark:text-gray-300">
            {project.description}
          </p>

          <h2 class="text-2xl mb-2 mt-6 font-bold text-purple-400">
            Características principales
          </h2>

          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Registro completo de pacientes: datos personales, historial
                clínico y evolución terapéutica.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Interfaz moderna, limpia y responsive con Tailwind CSS.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Historial centralizado y accesible desde cualquier dispositivo.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Buscador inteligente con filtros por nombre, fecha, terapeuta o
                tipo de terapia.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Agenda dinámica para programar, reagendar o cancelar sesiones
                rápidamente.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Autenticación segura mediante Supabase Auth con control de
                roles y permisos.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Dashboard con indicadores clave: sesiones por día, pacientes
                activos y progreso general.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Registros de sesiones con notas clínicas, ejercicios aplicados
                e imágenes opcionales.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Sincronización en tiempo real con Supabase para mantener la
                información siempre actualizada.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Diseño modular en PHP puro, permitiendo fácil mantenimiento y
                escalabilidad.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Exportación de reportes en PDF o Excel para control
                administrativo.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                >Registro de terapeutas con sus horarios, especialidades y
                sesiones asignadas.</span
              >
            </li>
          </ul>

          <h2 class="text-2xl mb-2 mt-6 font-bold text-purple-400">
            Tecnologías utilizadas
          </h2>

          <p class="text-gray-700 dark:text-gray-300 mb-3">
            El desarrollo se realizó integrando herramientas que permiten
            flexibilidad, rendimiento y una interfaz intuitiva, adaptada a las
            necesidades de una clínica de terapia física.
          </p>

          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>PHP puro</strong> como base del proyecto, permitiendo un
                control total sobre la lógica y arquitectura.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Tailwind CSS</strong> para construir una interfaz moderna,
                responsiva y altamente personalizable.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Supabase</strong> como backend en la nube, proporcionando
                autenticación segura, API REST automática y almacenamiento gestionado.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Supabase Auth</strong> para manejar sesiones, roles y perfiles
                de usuarios.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Supabase Postgres</strong> para el almacenamiento estructurado
                de información clínica y registros de sesiones.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Supabase Storage</strong> para la gestión de imágenes o documentos
                asociados a pacientes y terapeutas.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>JavaScript Vanilla</strong> para añadir interactividad, validaciones
                y una experiencia fluida sin frameworks adicionales.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>HTML5</strong> como estructura principal y base semántica
                del sistema.</span
              >
            </li>

            <li class="flex items-start gap-2">
              <span class="text-purple-600 dark:text-purple-400">•</span>
              <span
                ><strong>Git y GitHub</strong> para control de versiones, documentación
                del progreso y despliegue continuo.</span
              >
            </li>
          </ul>
        </div>
      </article>
    </SectionContainer>
  </main>
</Layout>
